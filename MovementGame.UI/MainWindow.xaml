<Window x:Class="MovementGame.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovementGame.UI"
        mc:Ignorable="d"
        Title="MainWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="Start Game" Click="MenuItem_Click"/>
            <MenuItem Header="User Preferences" Click="MenuItem_UserPreferences_Click"/>
        </Menu>
        <Canvas x:Name="Canvas_Level" Grid.Row="1" Background="#FFB08A8A">
            <Rectangle x:Name="Ellipse_Character" Fill="#FFF4F4F5" Height="40" Canvas.Left="0" Stroke="Black" Canvas.Bottom="0" Width="40"/>
        </Canvas>
    </Grid>
</Window>
